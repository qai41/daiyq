.grace-coupons{display:flex; flex-wrap:nowrap; border-top-left-radius:6px; border-bottom-left-radius:6px;}
.grace-coupons .left{width:100%; height:200rpx; padding:0 5px; display:flex; justify-content:space-between; align-items:center; border-radius:6px; position:relative;}
.grace-coupons .left .number{width:38%; display:flex; flex-wrap:wrap; border-right:1px dashed #D2D2D2;}
.grace-coupons .left .number .show{font-size:60rpx; font-weight:700; line-height:66rpx; text-align:center; width:100%;}
.grace-coupons .left .number text{color:#828282; font-weight:400; font-size:50rpx;}
.grace-coupons .left .number .txt{line-height:26rpx; font-size:22rpx; text-align:center; width:100%;}
.grace-coupons .left .body{width:57%; margin-left:4%; display:flex; flex-wrap:wrap; position:relative;}
.grace-coupons .left .status{display:inline-block; color:#FFFFFF; padding:0 10px; height:36rpx; line-height:36rpx; font-size:20rpx; position:absolute; z-index:1; right:6px; top:8px; border-radius:36rpx;}
.grace-coupons .left .body .title{width:100%; font-size:32rpx; line-height:46rpx;}
.grace-coupons .left .body .desc{color:#999999; margin-top:3px; font-size:24rpx; line-height:36rpx;}
.grace-coupons .right{width:150rpx; height:200rpx; flex-shrink:0; font-size:32rpx; display:flex; align-items:center; justify-content:center; color:#FFF;}
.grace-coupons .sawtooth{width:8px; height:200rpx; overflow:hidden; position:relative; flex-shrink:0;}
.grace-coupons .sawtooth .circular{width:10px; margin:5px; height:10px; border-radius:10px; background:#F9F9F9;}